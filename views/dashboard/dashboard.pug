extends ../public/layout

block content
    h2 #{company.name}'s Dashboard:
    .ui.two.column.grid
        .column
            .ui.steps
                .completed.step
                    span.ui.green.label.big(id="present_employees_number")
                    .content
                        .title Present 
                        .description Employees
            .ui.raised.segment
                a.ui.green.ribbon.label Present
                span Employees:
                div(id="present")
                    each val in present
                        p(data-id=val._id) #{val.firstName} #{val.lastName}
        .column
            .ui.steps
                .completed.step
                    span.ui.red.label.big(id="absent_employees_number")
                    .content
                        .title Absent 
                        .description Employees
            .ui.segment
                a.ui.red.right.ribbon.label Absent
                span Employees:
                div(id="absent")
                    each val in absent
                        p(data-id=val._id) #{val.firstName} #{val.lastName}
    
    script.
        companyId = "#{company._id}";
        presentNumber = "#{presentNumber}";
        absentNumber = "#{absentNumber}";
        
    script(src="dest/js/socket.io.js")
    script(src="dest/js/dashboard.js")
